<h2>Edit movie</h2>

<form action="/movies/{{movie._id}}/edit" method="post">

  <div>
  <label for="title">Title:</label>
  <input id="title" type="text" name="title" value="{{movie.title}}">
  </div>

  <div>
  <label for="genre">Genre:</label>
  <input id="genre" type="text" name="genre" value="{{movie.genre}}">
  </div>

  <div>
  <label for="plot">Plot:</label>
  <input id="plot" type="text" name="plot" value="{{movie.plot}}">
  </div>

  <div>
    <label for="cast">Cast:</label>
    <select id="cast" name="cast" multiple>
      {{#each enhancedCelebrities}}
      <option value="{{this._id}}" {{#if selected}}selected{{/if}}>{{this.name}}</option>
      {{/each}}
    </select>
  </div>

  <button>Update</button>
  <a href="/movies">Cancel</a>

</form>
